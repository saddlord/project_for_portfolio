<div class="jumbotron">
  <h1 class="display-4">Hello, world!</h1>
  <p class="lead">Créer et rejoignez des evenements</p>
  <hr class="my-4">
  <p>Allez y.</p>
<a href="<%= new_event_path %>" class="btn btn-primary">Créer votre event </a>
</div>



<div class="container-fluid row">
	<% Event.all.each do |event| %>
  <div class="col-sm-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= event.title %></h5>
        <p class="card-text"><%= event.description %></p>
		<p class="card-text"><%= event.start_date %></p>
		<p class="card-text"><%= event.location %></p>
		<p class="card-text"><%= event.price %> $</p>
        <a href="<%= event_path(event.id) %>" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
  </div>
  <%end%>
</div>
