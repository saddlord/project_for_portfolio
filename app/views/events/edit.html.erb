<h2 class="h1 mt-3 mb-4 ml-3 text-center">modifier l'event</h2>
<div class="container mt-5 form-group text-center">
        <%= form_tag url_for(action: 'update'), method: "patch" do %>
   <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <div class="form-group">
  <%= label_tag 'Title' %>
  <%= text_field_tag 'title',value = @event.title, autofocus: true, class: 'form-control' %>
  </div>    
  <div class="form-group">
    <%= label_tag 'Location' %>
    <%= text_field_tag 'location', value = @event.location, autofocus: true, class: 'form-control' %>  
  </div>   
  <div class="form-group">
    <%= label_tag 'Starts at' %>
    <%= datetime_field_tag 'start_date', value = @event.start_date, autofocus: true, class: 'form-control' %>  
  </div>  
  <div class="form-group"> 
    <%= label_tag 'Duration' %>
    <%= number_field_tag 'duration', value = @event.duration, autofocus: true, class: 'form-control' %>  
  </div>
  <div class="form-group"> 
    <%= label_tag 'Price' %>
    <%= number_field_tag 'price', value = @event.price, autofocus: true, class: 'form-control' %>  
  </div>
  <div class="form-group"> 
    <%= label_tag 'Description_of_your_event' %>
    <%= text_field_tag 'description', value = @event.description, autofocus: true, class: 'form-control' %>  
  </div>
  <div class="actions mt-4 mb-3">
  <%= submit_tag "Edit", class:"btn btn-lg btn-dark btn-block" %>
  </div>
  <% end %>

  <h2 class="h1 mt-3 mb-4 ml-3 text-center">supprimer l'event</h2>
<%= link_to 'Destroy', @event, :method => :delete, :confirm => "Are you sure?" %>
</div>